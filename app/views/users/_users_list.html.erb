<div class="container">
  <div class="row">
    <% @users.each do |user| %> <!-- Boucle à travers les utilisateurs -->
      <div class="col-md-3 mb-3"> <!-- Colonne Bootstrap pour l'affichage -->
        <div class="card">
          <!-- Ajout d'un conteneur parent pour gérer l'image et l'icône étoile -->
          <div class="card-img-top-container">
            <!-- Affichage de la photo si elle est attachée -->
            <% if user.photo.attached? %>
              <%= image_tag user.photo, class: "card-img-top" %>
            <% end %>
            <!-- Positionnement de l'icône étoile -->
                <i class="fa-solid fa-star position-icon"></i>
            <!-- Positionnement de l'icône match -->
                <i class="fa-solid fa-heart-circle-check position-icon-match"></i>
          </div>

          <!-- Contenu de la carte -->
          <div class="card-body">
            <!-- Nom de l'utilisateur en titre de la carte -->
            <h5 class="card-title">
              <% if user.aupair? %>
                <%= user.first_name %> <%= user.last_name %>
              <% else %>
                <%= user.last_name %>
              <% end %>
            </h5>

            <!-- Informations spécifiques à l'au_pair -->
            <% if user.aupair? %>
              <!-- Nationalité -->
              <p class="card-nationality">
                <i class="fa-solid fa-location-dot"></i> <%= user.nationality %>
              </p>
              <!-- Genre, Âge -->
              <p class="card-details">
                <%= user.gender %>, <%= Date.today.year - user.birth_date.year %> years old<br>
              <!-- Description -->
                <p class="card-description">
                <%= truncate(user.description, length: 70) %>
                </p>
              </p>
            <% else %> <!-- Informations spécifiques à la famille -->
              <p class="card-text">
                <%= "Location: #{user.location}" %><br>
                <%= "Number of children: #{user.number_of_children}" %><br>
                <%= truncate(user.description, length: 70) %>
              </p>
            <% end %>

            <!-- Bouton pour voir le profil détaillé -->
            <%= link_to "View profile", user_path(user), class: "btn btn-primary" %>

            <%= link_to "Add as favorite",
                  favorites_path(visited_user: user, visiting_user: current_user ),
                  data: {turbo_method: :post},
                  class: "btn btn-secondary" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
