<%= render 'navbar' %>

<div class="container">
  <h1>Editer mon profil</h1>

  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group">
      <%= form.label :first_name, "Prénom" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "Nom" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :birth_date, "Date de naissance" %>
      <%= form.date_field :birth_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :nationality, "Nationalité" %>
      <%= form.text_field :nationality, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender, "Genre" %>
      <%= form.select :gender, ['Masculin', 'Féminin', 'Non-binaire', 'Autre'], class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location, "Lieu" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :number_of_children, "Nombre d'enfants" %>
      <%= form.number_field :number_of_children, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :photo, "Photo de profil" %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>

    <%= form.submit "Mettre à jour", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Annuler", user_path(@user), class: "btn btn-secondary" %>

</div>
