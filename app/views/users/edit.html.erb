<%= render 'navbar' %>

<div class="container">
  <h1>Update your profile</h1>

  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group">
      <%= form.label :first_name, "First name" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "Last name" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :birth_date, "Birth date" %>
      <%= form.date_field :birth_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :nationality, "Nationality" %>
      <%= form.text_field :nationality, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender, "Genre" %>
      <%= form.select :gender, ['Male', 'Female'], class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location, "Location" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :number_of_children, "Number of children" %>
      <%= form.number_field :number_of_children, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :photo, "Profile picture" %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>

    <%= form.submit "Update", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Cancel", user_path(@user), class: "btn btn-secondary" %>

</div>
