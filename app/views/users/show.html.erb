<%= render 'navbar' %>

<div class="container">
  <div class="user-banner card mt-4">
    <div class="row">
      <div class="col-md-3">
        <div class="user-profile-picture m-1">
          <%= cl_image_tag(@visited_user.photo.key, width: 300, height: 300, class: "card-img-top") %>
        </div>
      </div>

      <div class="col-md-9">
        <div class="user-description">
          <h2><%= "#{@visited_user.first_name} #{@visited_user.last_name}" %></h2>
          <p><%= @visited_user.description %></p>
          <ul style= "list-style-type: none; margin: 0; padding: 0;">
            <li><i class="fa-solid fa-cake-candles text-primary"></i> <%= @visited_user.birth_date %></li>
            <li>years old</li>
            <li><i class="fa-solid fa-house text-primary"></i> <%= @visited_user.location %></li>
            <li><i class="fa-solid fa-globe text-primary"></i> <%= @visited_user.nationality %></li>
            <li><i class="fa-solid fa-venus-mars text-primary"></i> <%= @visited_user.gender %></li>
            <li><i class="fa-solid fa-people-group text-primary"></i> <%= @visited_user.role %></li>
          </ul>

        </div>
      </div>
    </div>
  </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <div class="card user-description justify-content-start">

        </div>
      </div>

      <div class="col-md-6">
        <div class="card user-location" style="width: 100%; height: 300px;"
              data-controller="map"
              data-map-markers-value="<%= @map.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
    </div>

    <div class="text-center my-4">
      <%= current_user.aupair? ? (link_to "Back to families' list", root_path, class:"btn btn-primary") :
      (link_to "Back to aupairs' list", root_path, class:"btn btn-primary")  %>
  </div>
</div>
